{{#if editPostForm}}
  <h2>Edit Question</h2>
  <div class="col-md-6">
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="title">Topic of question</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{textarea value=question id="question" placeholder=post.question}}
      </div>

      <div class="form-group">
        <label for="notes"Additional >Notes</label>
        {{textarea value=notes id="notes" placeholder=post.notes}}
      </div>
      <a class="btn btn-dark" {{action 'cancel'}}>Cancel</a>
      <button class="btn btn-success" type="submit" {{action 'edit'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editPostForm'}}>Edit Question</button>
{{/if}}