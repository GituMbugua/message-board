{{#if addNewAnswer}}
  <div class="well">
    <h1>Answer</h1>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Answer</label>
        {{textarea class="form-control" value=answer id="answer"}}
      </div>
      <button class="btn btn-dark" {{action 'cancel'}}>Cancel</button>
      <button class="btn btn-success" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'answerFormShow'}}>Your Answer</button>
{{/if}}