{{#if addNewAnswer}}
<h1>Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Answer</label>
        {{input value=answer id="answer"}}
      </div>
      <button class="btn btn-success" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'answerFormShow'}}>Your Answer</button>
{{/if}}