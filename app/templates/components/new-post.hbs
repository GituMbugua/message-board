{{#if addNewPost}}
  <div class="well new-post">
  <h2>Post a Question</h2>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      
      <div class="form-group">
        <label for="title">Topic of question</label>
        {{input class="form-control" value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{textarea class="form-control" value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{textarea class="form-control" value=notes id="notes"}}
      </div>
      <button class="btn btn-dark" {{action 'cancel'}}>Cancel</button>
      <button class="btn btn-success" type="submit" {{action 'savePost'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'postFormShow'}}><h4>Post a Question</h4></button>
{{/if}}